# =============================================================================
# CONFIGURAÇÕES PARA DESENVOLVIMENTO LOCAL (Docker Compose)
# =============================================================================

# Configurações do Banco de Dados
DB_HOST=postgres          # Para docker-compose
DB_PORT=5432
DB_NAME=orchestrator
DB_USER=orchestrator_user
DB_PASSWORD=sua_senha_muito_segura_aqui  # ALTERE!

# =============================================================================
# PARA EASYPANEL (todos serviços no mesmo container):
# Use: DB_HOST=localhost e REDIS_HOST=localhost
# Veja arquivo .env.easypanel para configuração completa
# =============================================================================

# Configurações da Aplicação (OBRIGATÓRIAS)
SECRET_KEY=sua_chave_secreta_muito_segura_de_pelo_menos_32_caracteres

# Configurações Opcionais
LOG_LEVEL=INFO
MAX_WORKERS=1

# Performance Tuning
IMBALANCE_THRESHOLD=0.2
MAX_STREAM_DIFFERENCE=2
HEARTBEAT_TIMEOUT=300
HEARTBEAT_WARNING_THRESHOLD=120
MAX_MISSED_HEARTBEATS=3
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
EXPONENTIAL_BACKOFF=true

# Feature Flags
RUN_MIGRATIONS=true
RUN_HEALTH_CHECK=true