# ✅ VARIÁVEIS OBRIGATÓRIAS PARA PRODUÇÃO
# ========================================

# Senha do banco PostgreSQL (ALTERE ESTA!)
DB_PASSWORD=SuaSenhaSegura123!

# Chave secreta da aplicação (ALTERE ESTA!)
SECRET_KEY=sua_chave_secreta_muito_segura_de_pelo_menos_32_caracteres_aqui

# ✅ CONFIGURAÇÕES DE REDE PARA EASYPANEL
# =======================================

# Database - Como está no mesmo container, use localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orchestrator
DB_USER=orchestrator_user

# Redis - Como está no mesmo container, use localhost  
REDIS_HOST=localhost
REDIS_PORT=6379

# Aplicação
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000

# ✅ CONFIGURAÇÕES DE PRODUÇÃO OTIMIZADAS
# =======================================

# Logs mais limpos em produção
LOG_LEVEL=INFO

# Workers (ajuste conforme recursos do EasyPanel)
MAX_WORKERS=2

# Performance otimizada para produção
IMBALANCE_THRESHOLD=0.15
MAX_STREAM_DIFFERENCE=3
HEARTBEAT_TIMEOUT=180
HEARTBEAT_WARNING_THRESHOLD=90
MAX_MISSED_HEARTBEATS=2
MAX_RETRY_ATTEMPTS=5
RETRY_DELAY_SECONDS=3
EXPONENTIAL_BACKOFF=true

# Feature flags para produção
RUN_MIGRATIONS=true
RUN_HEALTH_CHECK=true

# ✅ CONFIGURAÇÕES ESPECÍFICAS DO EASYPANEL
# =========================================

# Timezone (ajuste conforme necessário)
TZ=America/Sao_Paulo

# Encoding
LANG=pt_BR.UTF-8
LC_ALL=pt_BR.UTF-8